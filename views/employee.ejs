<!-- jQuery -->
<script src="../vendor/jquery/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript-->
<script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="../vendor/metisMenu/metisMenu.min.js"></script>

<!-- Custom Theme JavaScript -->

<script src="../dist/js/sb-admin-2.js"></script>

<script src="../dist/js/semantic.min.js"></script>
<script src="../dist/js/jquery.dataTables.min.js"></script>
<script src="../dist/js/dataTables.semanticui.min.js"></script>
<script src="../dist/js/dataTables.buttons.min.js"></script>
<script src="../dist/js/buttons.semanticui.min.js"></script>
<script src="../dist/js/dataTables.select.min.js"></script>
<script src="../dist/js/dataTables.editor.min.js"></script>
<script src="../dist/js/editor.semanticui.min.js"></script>
<script>
var editor;
$(document).ready(function() {
        editor = new $.fn.dataTable.Editor( {
        ajax: {
            create: {
                type: 'POST',
                url:  '../api/json/employee/add'
            },
            edit: {
                type: 'PUT',
                url:  '../api/json/employee/edit/_id_'
            },
            remove: {
                type: 'DELETE',
                url:  '../api/json/employee/remove/_id_'
            }
        },
        table: "#table",
        fields: [
            { label: '公司名称', name: 'company' },
            { label: '楼层',  name: 'floor'  },
            { label: '门牌号',  name: 'number'  },
            { label: '姓名',  name: 'name'  },
            { label: '电话',  name: 'phone'  },
            { label: '微信昵称',  name: 'nickname'  }
        ],i18n: {
                create: {
                    button: "新增",
                    title:  "新建一个用户",
                    submit: "创建"
                },
                edit: {
                    button: "编辑",
                    title:  "用户资料修改",
                    submit: "更新"
                },
                remove: {
                    button: "删除",
                    title:  "删除",
                    submit: "删除",
                    confirm: {
                        _: "确定要删除 %d 条吗?",
                        1: "确定要删除这条用户资料吗?"
                    }
                }
            }
    } );
    var table= $('#table').DataTable( {
        "processing": true,
        stateSave: true,
        "dom": '<"top"Brf>t<"bottom"ilp>',
        "ajax": '../api/json/employee',
        "columns": [
            {"data":null},
            { "data": "company" },
            { "data": "floor" },
            { "data": "number" },
            { "data": "name" },
            { "data": "phone" },
            { "data": "nickname" }
        ],
        select:true,
        buttons: [
    
    { extend: "edit",  editor: editor },
    { extend: "remove", editor: editor }
    ] ,
        "order": [[1, 'asc']],
        "language": {
            "url": "../vendor/zh_CN.txt"
        }
    });
    table.on('order.dt search.dt',function() {
                table.column(0, {
                    search: 'applied',
                    order: 'applied'
                }).nodes().each(function(cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
});
</script>
</body>

</html>
